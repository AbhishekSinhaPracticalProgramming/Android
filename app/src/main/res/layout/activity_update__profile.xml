<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mmu_application.Update_Profile"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/background"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="15dp"
        android:background="#7A7E7E7E"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alegreya_sc_bold_italic"
            android:text="@string/Alumni"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="25sp"
            android:layout_marginLeft="20dp"

            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo1"

            android:layout_alignParentRight="true"
            />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="#70FCABC5"
        android:layout_margin="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:text="Update Profile "
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#0800FD"
            android:textSize="25sp"
            android:layout_marginLeft="30dp"
            android:layout_centerInParent="true"


            />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_margin="10dp"
            android:elevation="5dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:background="#A6FDF9A7"

            >




            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:hint="Enter Full Name"
                android:textColorHint="#D76D6767"


                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/update_fullname_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_person_black_24dp"
                    android:lines="1"
                    android:textColor="#000000"


                    />



            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:hint="Enter Phone No."
                android:textColorHint="#D76D6767"


                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/update_phone_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:lines="1"
                    android:textColor="#000000"
                    android:inputType="numberSigned"
                    android:maxLength="10"

                    />



            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:hint="Email"
                android:textColorHint="#D76D6767"



                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/update_session_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:lines="1"

                    android:textColor="#000000"
                    android:editable="false"

                    />



            </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RadioGroup
                android:id="@+id/update_radioGroup_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">



                    <RadioButton
                        android:checked="true"
                        android:id="@+id/update_male_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Male"
                        android:padding="10dp"
                        android:textSize="15dp"
                        android:textColor="#000000"
                        android:layout_margin="5dp"
                        />

                <RadioButton
                    android:id="@+id/update_female_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:padding="10dp"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:layout_margin="5dp"

                    />




            </RadioGroup>



        </LinearLayout>



            <Button
                android:id="@+id/update_submit_button_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_round"
                android:elevation="10dp"
                android:text="Submit"
                android:textAllCaps="false"
                android:textColor="#ffff"
                android:textSize="20sp"
                android:textStyle="bold"

                />




        </LinearLayout>
    </ScrollView>

</LinearLayout>